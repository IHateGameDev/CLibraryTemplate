name: Build and Testing

on: 
  push:
    branches: [ "main", "dev" ]

jobs:
  build-linux:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Install build system
        run: sudo apt-get update && sudo apt-get install -y $(cat .github/ubuntu-deps)

      - name: Get Unity Tests
        run: |
          git clone https://github.com/ThrowTheSwitch/Unity.git
          mkdir unity
          ln -s Unity/src/unity.h unity/

      - name: Build Project
        run: |
          mkdir build
          cd build
          cmake -DCMAKE_BUILD_TYPE=Release -DBUILD_SHARED=ON -DBUILD_TESTS=ON -DLAUNCH_TESTS=ON .. -G Ninja
          ninja

